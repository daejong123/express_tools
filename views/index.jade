extends layout

block content
  h1= title
  p Welcome to #{title}
  p -------文件上传--------
  form(action='/upload', method="post", enctype="multipart/form-data")
    p 
      input(type='text', name="id", placeholder="输入文件标识")
    p
      input(type="file", name="img")
    p
      button(type="submit") 点击上传
  p --------文件上传-------


  h3 文件库
  ol
    each val in imageNames
      li
        a(href=val) [预览]
        span /
        a(href="/download/"+val) [下载]
        span ----[
        =val
        span ]
      
        
  


  script(src="/javascripts/index.js",type="text/javascript")
